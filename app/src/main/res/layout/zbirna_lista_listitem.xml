<?xml version="1.0" encoding="utf-8"?>
<!-- The background enables the activation appearance on tablets -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    >

    <!--  ListRow Left sied Thumbnail image -->
    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="3dip"
        android:layout_alignParentLeft="true"
         android:layout_marginRight="5dip">



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/list_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:paddingBottom="5dp"
                android:src="@drawable/lorry_flatbed"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5/5"
                android:gravity="center_horizontal"
                android:id="@+id/status_pl"
                android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tvNazivKomitenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:layout_marginLeft="0dp"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
        android:id="@+id/tvAdresaKomitenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/tvNazivKomitenta"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    <TextView
        android:id="@+id/tvStatusnaLinija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_below="@+id/tvAdresaKomitenta"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <!-- Rightend Arrow -->
    <ImageView
        android:src="@drawable/list_item_arrow"
        android:layout_width="20dip"
        android:layout_height="20dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>



</RelativeLayout>
